<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <listener>
        <listener-class>spmp.servlets.SPMPFacadeServletContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>spmp.servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CadastrarAluno</servlet-name>
        <servlet-class>spmp.servlets.CadastrarAluno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PreMatricula</servlet-name>
        <servlet-class>spmp.servlets.PreMatricula</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAdaptor</servlet-name>
        <servlet-class>com.sun.ws.rest.impl.container.servlet.ServletAdaptor</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Matricula</servlet-name>
        <servlet-class>spmp.servlets.Matricula</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CadastrarAluno</servlet-name>
        <url-pattern>/CadastrarAluno.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PreMatricula</servlet-name>
        <url-pattern>/PreMatricula.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAdaptor</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Matricula</servlet-name>
        <url-pattern>/Matricula.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        </welcome-file-list>
    </web-app>
